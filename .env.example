# Environment Configuration Template
# Copy this file to .env and fill in your values

# Firebase Configuration
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_API_KEY=your_web_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Cloud Functions Configuration
CLOUD_FUNCTIONS_REGION=us-central1
CLOUD_FUNCTIONS_TIMEOUT=540

# Google Cloud Configuration
GCP_PROJECT_ID=your_project_id
GCP_REGION=us-central1

# Authentication
GOOGLE_CLIENT_ID_ANDROID=your_android_client_id
GOOGLE_CLIENT_ID_IOS=your_ios_client_id
GOOGLE_CLIENT_ID_WEB=your_web_client_id

# AdMob Configuration (Optional)
ADMOB_APP_ID=ca-app-pub-xxxxxxxxxxxxxxxx~yyyyyyyyyy
ADMOB_BANNER_AD_UNIT_ID=ca-app-pub-3940256099942544/6300978111
ADMOB_INTERSTITIAL_AD_UNIT_ID=ca-app-pub-3940256099942544/1033173712
ADMOB_REWARDED_AD_UNIT_ID=ca-app-pub-3940256099942544/5224354917

# App Configuration
APP_NAME=EarnPlay
APP_VERSION=1.0.0
BUILD_NUMBER=1
ENVIRONMENT=production

# API Configuration
API_BASE_URL=https://your-api.com
API_TIMEOUT_SECONDS=30
API_RETRY_COUNT=3

# Analytics
ANALYTICS_ENABLED=true
CRASH_REPORTING_ENABLED=true

# Feature Flags
FEATURE_GAMES_ENABLED=true
FEATURE_REFERRAL_ENABLED=true
FEATURE_WITHDRAWAL_ENABLED=true
FEATURE_ADS_ENABLED=true

# Payment Configuration
PAYMENT_GATEWAY=razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_REMINDER_HOUR=08
NOTIFICATION_REMINDER_MINUTE=00

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=logs/

# Security
ENABLE_SSL_PINNING=true
ENABLE_BIOMETRIC_AUTH=true

# Database
FIRESTORE_CACHE_SIZE_MB=50
FIRESTORE_PERSISTENCE_ENABLED=true

# Debug Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_DATA_ENABLED=false
