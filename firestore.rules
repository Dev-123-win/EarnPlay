rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================================================
    // HELPER FUNCTIONS
    // ========================================================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user is owner
    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    // Check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Check request has valid data structure
    function hasRequiredFields(required) {
      return request.resource.data.keys().hasAll(required);
    }
    
    // Validate coin amount
    function isValidCoinAmount(amount) {
      return amount is int && amount >= 0 && amount <= 999999;
    }

    // ========================================================================
    // USERS COLLECTION
    // ========================================================================
    
    match /users/{uid} {
      // Read: Users can read their own profile and public data
      allow read: if isAuthenticated() && (isOwner(uid) || isAdmin());
      
      // Create: Triggered by Cloud Function on auth signup
      allow create: if isAuthenticated() && isOwner(uid) && 
        hasRequiredFields(['uid', 'email', 'coins', 'dailyStreak', 'referralCode']) &&
        request.resource.data.coins == 0 &&
        request.resource.data.dailyStreak.currentStreak == 0 &&
        request.resource.data.watchedAdsToday == 0 &&
        request.resource.data.spinsRemaining == 3;
      
      // Update: Only allow specific fields to be updated
      allow update: if isAuthenticated() && isOwner(uid) &&
        (
          // Allow updating coins through Cloud Functions only
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['coins', 'dailyStreak', 'gameStats', 'watchedAdsToday', 'spinsRemaining', 'lastSync', 'lastCoinUpdate', 'lastWithdrawal'])
        );
      
      // Delete: Only admins can delete users (data cleanup)
      allow delete: if isAdmin();
      
      // Subcollection for user statistics
      match /statistics/{stat} {
        allow read: if isOwner(uid) || isAdmin();
        allow write: if isAdmin();
      }
    }

    // ========================================================================
    // COIN TRANSACTIONS COLLECTION
    // ========================================================================
    
    match /coinTransactions/{transactionId} {
      // Read: Users can read their transactions, admins can read all
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isAdmin());
      
      // Create: Only Cloud Functions can create transactions
      allow create: if false;
      
      // Update: Only admins can update (mark as completed/failed)
      allow update: if isAdmin() &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['status', 'completedAt', 'errorMessage']);
      
      // Delete: Disabled
      allow delete: if false;
      
      // Index: userId, timestamp (for querying user's transaction history)
    }

    // ========================================================================
    // WITHDRAWALS COLLECTION
    // ========================================================================
    
    match /withdrawals/{withdrawalId} {
      // Read: Users can read their withdrawals, admins can read all
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isAdmin());
      
      // Create: Only Cloud Functions can create withdrawals
      allow create: if false;
      
      // Update: Admins can update status
      allow update: if isAdmin() &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['status', 'completedAt', 'transactionId', 'notes']);
      
      // Delete: Disabled
      allow delete: if false;
      
      // Index: userId, status, createdAt (for admin dashboard)
    }

    // ========================================================================
    // GAMES COLLECTION
    // ========================================================================
    
    match /games/{gameId} {
      // Read: Public game data (leaderboards, game info)
      allow read: if true;
      
      // Write: Only admins
      allow write: if isAdmin();
    }

    // ========================================================================
    // LEADERBOARDS COLLECTION
    // ========================================================================
    
    match /leaderboards/{category}/entries/{userId} {
      // Read: Public leaderboards
      allow read: if true;
      
      // Write: Only Cloud Functions
      allow write: if false;
    }

    // ========================================================================
    // REFERRALS COLLECTION
    // ========================================================================
    
    match /referrals/{referralId} {
      // Read: Users can read their own, admins can read all
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.referrerId) || 
         isOwner(resource.data.referredUserId) || 
         isAdmin());
      
      // Write: Only Cloud Functions
      allow write: if false;
    }

    // ========================================================================
    // ERROR LOGS COLLECTION
    // ========================================================================
    
    match /errors/{errorId} {
      // Read: Only admins
      allow read: if isAdmin();
      
      // Write: Cloud Functions only
      allow write: if false;
    }

    // ========================================================================
    // AUDIT LOGS COLLECTION
    // ========================================================================
    
    match /auditLogs/{logId} {
      // Read: Only admins
      allow read: if isAdmin();
      
      // Write: Cloud Functions only
      allow write: if false;
    }

    // ========================================================================
    // ADMIN CONFIGURATION
    // ========================================================================
    
    match /config/{document=**} {
      // Read: Authenticated users can read (for client config)
      allow read: if isAuthenticated();
      
      // Write: Only admins
      allow write: if isAdmin();
    }

    // ========================================================================
    // DEFAULT DENY
    // ========================================================================
    
    // Catch all - deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
